# Avito API
AVITO_CLIENT_ID=your_client_id
AVITO_CLIENT_SECRET=your_secret
AVITO_REDIRECT_URI=https://your-domain.com/callback
AVITO_TOKEN_URL=https://api.avito.ru/token
AVITO_API_BASE=https://api.avito.ru

# Webhook (если используешь)
WEBHOOK_PUBLIC_URL=https://your-domain.com/webhook

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_ADMIN_USER_ID=123456789

# Уведомления
REMIND_AFTER_MIN=15

# Строка подключения к БД (Postgres в Docker)
NOTIFY_DB_URL=postgresql+psycopg2://app:app_password@db:5432/notify

# Переменные для контейнера Postgres
POSTGRES_DB=notify
POSTGRES_USER=app
POSTGRES_PASSWORD=app_password

TOKENS_PATH=/app/runtime/tokens.json